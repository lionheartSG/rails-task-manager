<h1>Create New Task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control w-25"%>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control w-25" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<%= link_to 'back', tasks_path, class: "btn btn-primary btn-sm" %>
